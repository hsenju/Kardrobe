	<script language="javascript">
	function checkForm(f)
	{
		var goodForm = true;
		var errElement = new Object();
		var msg = "";
		if(document.theForm.fname.value == "")
		{
			goodForm = false;
			msg = "You must enter your first name.";
			errElement = f.fname;
		}
		else if(document.theForm.lname.value == "")
		{
			goodForm = false;
			msg = "You must enter your last name.";
			errElement = f.lname;
		}
		else if((f.email.value =="") || (f.email.value.indexOf(".") < 0) ||
			(f.email.value.indexOf("@") < 0))
		{
			goodForm = false;
			msg = "That is not a valid email address.";
			errElement = f.email;
		}
		/* lines commented for PMO#58067
		else if(document.theForm.addr1.value == "")
		{
			goodForm = false;
			msg = "You must enter your address.";
			errElement = f.addr1;
		}
		else if(document.theForm.city.value == "")
		{
			goodForm = false;
			msg = "You must enter your city.";
			errElement = f.city;
		}
		else if(document.theForm.state.value == "")
		{
			goodForm = false;
			msg = "You must enter your state.";
			errElement = f.state;
		}
		else if(document.theForm.zip.value == "")
		{
			goodForm = false;
			msg = "You must enter your zip code.";
			errElement = f.zip;
		}
		else if(document.theForm.phone.value == "")
		{
			goodForm = false;
			msg = "You must enter your phone number.";
			errElement = f.zip;
		} */
		if(goodForm)
		{
			return true;
		}
		else
		{
			alert(msg);
			errElement.focus();
			return false;
		}
	}
	</script>
	
