function updateShirtViewAlt(REGPath) {
	
		thisProdShotView = eval('window.document.mainImage');
	
	if (REGPath != "")
	{
		thisProdShotView.src = REGPath;
	}
}

function selectColorSwatch(productId, colorIndex, updatingDropDown) {
    var cyoProd = getCyoProduct(productId);
    cyoProd.setSelectedColorIndex(colorIndex);
    
    if (updatingDropDown) {
        cyoProd.getHtmlObject("color").selectedIndex = colorIndex;
    }
    
    if (cyoProd.customized) {
        cyoProd.setSelectedCustomizationIndex(0);
        updateCustomOptions(cyoProd);
    } else {
        updateImages(cyoProd);
    }
}

function selectSize(productId, sizeDropDown) {
    
    var cyoProd = getCyoProduct(productId);
    
    cyoProd.setSelectedSize(sizeDropDown.options[sizeDropDown.selectedIndex].value);
    cyoProd.setSelectedColorIndex(0);
    cyoProd.setSelectedCustomizationIndex(0);
    //omniEngagementImpressions("event44", "Product Feature: Size");
    fromSizeChanged = '1';
    updateColors(cyoProd);
}

var fixedColorIndex = 0;
var persistentSelectCustomOptionThreadColorIndex	= new Array();

function selectCustomOptionOnClick(productId, threadColorIndex, updatingDropDown)
{
	fixedColorIndex     = threadColorIndex; 
	selectCustomOption(productId, threadColorIndex, updatingDropDown, true); 
	atlView = false;
   //omniEngagementImpressions("event44", "Product Feature: Color");
}

function selectCustomOptionOnMouseOver(productId, threadColorIndex)
{
	selectCustomOption(productId, threadColorIndex, false, true);
}

function selectCustomOptionOnMouseOut(productId)
{
	if(!atlView) {
		selectCustomOption(productId, fixedColorIndex, false, true);
		altView = false;
	}
	else{
		selectCustomOption(productId, fixedColorIndex, false, true);
		updateShirtViewAlt(persistentAltView);	
	}	
}

function selectCustomOption(productId, threadColorIndex, updatingDropDown, bUpdateEmblemDropDown) {
    var cyoProd = getCyoProduct(productId);
    cyoProd.setSelectedCustomizationIndex(threadColorIndex);
    
    if (updatingDropDown) {
        cyoProd.getHtmlObject("custom").selectedIndex = threadColorIndex;
    }
    
    if( (bUpdateEmblemDropDown == null) || (bUpdateEmblemDropDown == true) )
    {
	    updateImages(cyoProd);
    }
}

function showError(errorContainerId, errorMsg) {
    document.getElementById(errorContainerId).innerHTML = errorMsg;
}

function showRLstyleGuide(pid, cp)
{
	if( getPopupUrl )
	{
		showCustomPopUp( '/contentPopup/index.jsp?' + getPopupUrl(pid) + '&showStyleGuide', 'largeImage', 'width=805,height=617,left=0,top=0');
	}
	else
	{
		window.name = "productParent";
		window.open("RLstyleGuide2.jsp?productId="+pid+"&backTo="+pid+"&savePath="+cp+"&ab=CYO_StyleGuide_"+pid,"RLStyleGuide","width=320,height=425,left=0,top=0");
	}
}

function sizeErrorCheck(sizeDropDown, cyoProd) {
    
    if (sizeDropDown.selectedIndex == -1 || sizeDropDown.options[sizeDropDown.selectedIndex].value == NO_SIZE) {
        var sizeErrorMsg = "<img src=\"http://www.ralphlauren.com/images/pixel.gif\"  width=\"284px\" height=\"10px\" /><br><b>ERROR</b>. Please select a size";
        showError("errorMessagingDiv", sizeErrorMsg);
        return true;
    }
    
    return false;
}

function updateColors(cyoProd) {

    var selectedSize = cyoProd.getSelectedSize();
    var numSwatchesPerRow = 6;
    
    var swatchHtml = "";
    var swatchContainer = cyoProd.getHtmlObject("swatch");
    var colorDropDown = cyoProd.getHtmlObject("color"); 
    var sizeDropDown = cyoProd.getHtmlObject("size"); 
       
    // Clear the color drop-down
    for (var i = colorDropDown.options.length - 1; i >= 0; i--) {
        colorDropDown.options[i] = null;
    }
    
    var cyoSwatches = cyoProd.getCyoSwatches(selectedSize);
    persistentSelectColorSwatchColorIndex[cyoProd.productId.toString()] = 0;
    for (var i = 0; i < cyoSwatches.length; i++) {
        
        colorDropDown.options[i] = new Option(cyoSwatches[i].color, i);
	  showSaleWithColor(cyoProd.getCyoSwatches(selectedSize), colorDropDown, sizeDropDown);
        if (i == cyoProd.getSelectedColorIndex()) {
            colorDropDown.options[i].selected = true;
        }
        
        if (i % numSwatchesPerRow == 0) {
            swatchHtml += "<div class=\"swatchRow\">\n";
        }
        
        swatchHtml += "<p>";
        swatchHtml += ("<a href=\"Javascript:selectColorSwatchOnClick('" + cyoProd.productId + "'," + i + ",true);\" ");
	  swatchHtml += 	("onMouseOver=\"selectColorSwatchOnMouseOver('" + cyoProd.productId + "'," + i + ")\" ");
	  swatchHtml += 	("onMouseOut=\"selectColorSwatchOnMouseOut('" + cyoProd.productId + "');\">");
        swatchHtml += ("<img src=\"" + cyoSwatches[i].swatchImage  + "\" title=\"" + cyoSwatches[i].color + "\" />");
        swatchHtml += "</a>";
        swatchHtml += "</p>\n";
        
        // End of the list or we have enought swatches for the row
        if ((i == cyoSwatches.length - 1) || (i + 1) % numSwatchesPerRow == 0) {
            swatchHtml += "<br class=\"clear\" />\n";
            swatchHtml += "</div>\n";
        }
    }
    
    swatchContainer.innerHTML = swatchHtml;
    
    
    if (cyoProd.customized) {
        updateCustomOptions(cyoProd);
    } else {
        updateImages(cyoProd);
    }
}

function updateCustomOptions(cyoProd) {
    
    var cyoSwatch = cyoProd.getCurrentSwatch();
    var customDropDown = cyoProd.getHtmlObject("custom"); 
    var swatchContainer = cyoProd.getHtmlObject("custom_swatch"); 
    var numSwatchesPerRow = 5;
    var isCrest = false;
    
	//CYO Emblem for crest numSwatchesPerRow = 3
	var prodDisplay = 'polocrest'; 
	
	var mode = cyoProd.getMode();	
    
	if(prodDisplay == 'polocrest' && mode == 'PCRST_MODE') 
	{
		numSwatchesPerRow = 3;
		isCrest = true;
	}
	

    // Clear the thread color drop-down
    for (var i = customDropDown.options.length - 1; i >= 0; i--) {
        customDropDown.options[i] = null;
    }
    
    var swatchHtml = "";
    for (var i = 0; i < cyoSwatch.customizedSwatches.length; i++) {
        
        customDropDown.options[i] = new Option(cyoSwatch.customizedSwatches[i].color, cyoSwatch.customizedSwatches[i].color);
        if (i == 0) {
            customDropDown.options[i].selected = true;
        }
        
        if (i % numSwatchesPerRow == 0) {
            swatchHtml += "<div class=\"customSwatchRow\">\n";
        }        
        
        // PMO 66439
        if (!isCrest) {        
          swatchHtml += "<p>";
        }              
        
        swatchHtml += ("<a href=\"Javascript:selectCustomOptionOnClick('" + cyoProd.productId  + "'," + i + ",true);\" ");
	    swatchHtml += ("onClick=\"selectCustomOptionOnMouseOver('" + cyoProd.productId  + "'," + i + ")\" ");
	    swatchHtml += ("onMouseOut=\"selectCustomOptionOnMouseOut('" + cyoProd.productId  + "');\">");
        swatchHtml += ("<img src=\"" + cyoSwatch.customizedSwatches[i].imageUrl  + "\" title=\"" + cyoSwatch.customizedSwatches[i].color + "\" />");
        swatchHtml += "</a>";
        
        // PMO 66439
        if (!isCrest) {          
          swatchHtml += "</p>\n";
        }                  
        
        
        // End of the list or we have enought swatches for the row
        if ((i == cyoSwatch.customizedSwatches.length - 1) || (i + 1) % numSwatchesPerRow == 0) {
            swatchHtml += "<br class=\"clear\" />\n";
            swatchHtml += "</div>\n";
        }
    }
    
    swatchContainer.innerHTML = swatchHtml;
    updateImages(cyoProd);
}

function updateImages(cyoProd) {
    // Update all the images for this product
    for (var i = 0; i < cyoProd.imageTypes.length; i++) {
        updateImageComponent(cyoProd, cyoProd.imageTypes[i]);
    }
}

function updateImageComponent(cyoProd, imageType) {
    
    var cyoSwatch = cyoProd.getCurrentSwatch();
    var mode = cyoProd.getMode();
    var dynamicImageParams = cyoProd.getDynamicImageParams(mode);
    var imageUrl = dynamicImageBaseUrl;
    
    for (var i = 0; i < dynamicImageParams.length; i++) {
        imageUrl += (imageUrl.indexOf("?") == (imageUrl.length - 1) ? "" : "&");
        imageUrl += buildImageUrlParam(dynamicImageParams[i].tag, dynamicImageParams[i].value);
    }

    if (cyoProd.customized) {
        var cyoCustomizedSwatch = cyoSwatch.customizedSwatches[cyoProd.getSelectedCustomizationIndex()];
		//changes for custom right image chain for Emblem
		if(mode == 'PCRST_MODE') 
		{
			if(imageType=='customRight')
			{
				if(cyoSwatch.CRChainSwatches.length > cyoProd.getSelectedCustomizationIndex())
				{
					var cyoCRChainSwatch = cyoSwatch.CRChainSwatches[cyoProd.getSelectedCustomizationIndex()];
					imageUrl += "&" + buildImageUrlParam("ponyimage", cyoCRChainSwatch.webcode);
				}
				else
				{
					imageUrl += "&" + buildImageUrlParam("ponyimage", "not attached");
				}
			}
			else
			{
				imageUrl += "&" + buildImageUrlParam("crestimage", cyoCustomizedSwatch.webcode);
			}
		}
		else
		{
			imageUrl += "&" + buildImageUrlParam("ponyimage", cyoCustomizedSwatch.webcode);
		}
		if (cyoCustomizedSwatch.hexKeyValue > "") {
            imageUrl += "&" + cyoCustomizedSwatch.hexKeyValue;
        }
    }
    
    imageUrl += "&" + buildImageUrlParam("displaysize", cyoProd.imageWidths[imageType]);
    imageUrl += cyoSwatch.dynamicImageChains[imageType];
    
    document.getElementById(cyoProd.images[imageType]).src = imageUrl;
}

function getSwatchColors(productId) {
    var cyoProd = getCyoProduct(productId);
    return cyoProd.getCyoSwatches(cyoProd.getSelectedSize());
}

function getSelectedSwatchColor(productId) {
    return persistentSelectColorSwatchColorIndex[productId];
}

var FORM_ID = "cyo_form";

function changeMode(modeNum, productId,cp){
    var ab;
    if (modeNum == 0) {
        ab = "CYO_PonyMode_" + productId;
    } else {
        ab = "CYO_MonoMode_" + productId;
    }
    
    var f = document.getElementById(FORM_ID);
    var actionParams = "&ab=" + ab; 
    actionParams += "&size=" + gs_getSelectedValue("size");
    actionParams += "&color=" + gs_getSelectedValue("color");
    if(cp) actionParams += "&cp="+cp;
    f.action = "/product/index.jsp?productId="+productId;
    f.target = "_self";
    f.action += actionParams;
    f["sm"].value = modeNum;

    f.submit();
    if(modeNum == 0){
    	//omniEngagementImpressions("event44", "Product Feature: MYO");
    }else{
    	//omniEngagementImpressions("event44", "Product Feature: Monogram ");
    }

}

function initialLoad(productId) {

    var cyoProd = getCyoProduct(productId);
    
    cyoProd.addHtmlObject("size", document.getElementById("size"));
    cyoProd.addHtmlObject("color", document.getElementById("color"));
    cyoProd.addHtmlObject("swatch", document.getElementById("color_sw"));
    cyoProd.addHtmlObject("custom", document.getElementById("custom_option"));
    cyoProd.addHtmlObject("custom_swatch", document.getElementById("customSwatches"));
    
    updateColors(cyoProd);
}

function submit(productId , submitProcess) {
    
    showError("errorMessagingDiv", "");
    
    var size = document.getElementById("size");
    var qty = document.getElementById("qty");
    var currentMode = document.getElementById("sm").value;
    var cyoProduct = getCyoProduct(productId);
    
    if (sizeErrorCheck(size, cyoProduct)) {
		document.getElementById("errorMessagingDiv").style.visibility = 'visible';
		document.getElementById("errorMessagingDiv").style.display = 'block';
		document.getElementById("itemsAddedMsg").style.visibility = 'hidden';
		document.getElementById("itemsAddedMsg").style.display = 'none';	
        return;
    } else {
		document.getElementById("itemsAddedMsg").style.visibility = 'visible';
		document.getElementById("itemsAddedMsg").style.display = 'block';
	}
        
    if (currentMode == "1") {  
	    var cyoSwatch = cyoProduct.getCurrentSwatch();
		if(cyoSwatch.CRChainSwatches.length > cyoProduct.getSelectedCustomizationIndex())
		{  
			var cyoCRChainSwatch = cyoSwatch.CRChainSwatches[cyoProduct.getSelectedCustomizationIndex()];
			document.getElementById("PEMB_TC").value = cyoCRChainSwatch.vendorCode;
		}
		else
		{
			document.getElementById("PEMB_TC").value = 'not selected';
		}

    }
    
    cyoProduct.setSelectedSize(size.options[size.selectedIndex].value);
    
    var cyoSwatch = cyoProduct.getCurrentSwatch();
    var cyoCustomizedSwatch = cyoSwatch.customizedSwatches[cyoProduct.getSelectedCustomizationIndex()];

    document.getElementById("qty_0").value = qty.options[qty.selectedIndex].value;
    document.getElementById("prod_0").value = cyoSwatch.pidSku;
    document.getElementById("customized_0").value = "true";
    document.getElementById("layoutId").value = cyoSwatch.layoutId;
    document.getElementById("featureValue").value = cyoCustomizedSwatch.vendorCode;
    document.getElementById("prodCounter").value = 1;
    if( submitProcess == "wishlist" )
    {
	    document.getElementById("wlName").value = "wlName";
	    document.getElementById("showMy").value = "wishlist";
    }
    
    addToCart(submitProcess);
	document.getElementById("size").selectedIndex = 0;
	selectSize(productId, document.getElementById("size"));
	document.getElementById("qty").selectedIndex = 0;
}


