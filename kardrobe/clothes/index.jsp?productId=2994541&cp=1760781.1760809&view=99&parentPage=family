			itemMap[18] = {skuid: '8377659', baseprice: 'null', currentprice: 'null'};
			

//function showSaleWithColor added for adding sale note in the color dropdown.
function showSaleWithColor(cyoSwatches, colorDropDown, sizeDropDown)
{
  var selectedIndexOfSize= sizeDropDown.selectedIndex; 
 
  if(colorDropDown.type == "select-one" && sizeDropDown.type == "select-one" && selectedIndexOfSize > 0)
  {
    var pidSkuArrayForSize = cyoSwatches;
    var isAllOnSale = "true";
    var colorCounter= 0;
    var saleCounter=0;

    //LOOP TO DETERMINE IF ALL SKUS ARE ON SALE
    //COUNT SKUS ON SALE
    for(; colorCounter < colorDropDown.options.length && colorCounter < pidSkuArrayForSize.length;colorCounter++)
    {
     // var pidSkuArray = pidSkuArrayForSize[colorCounter].split("|");
	 var pidSkuArray = pidSkuArrayForSize[colorCounter].pidSku.split("|");
	
      var curSku = pidSkuArray[1];

      for(var counter = 0; counter < itemMap.length; counter++)
      {
        if(itemMap[counter].skuid == curSku)
        {
          if(parseFloat(itemMap[counter].currentprice) < parseFloat(itemMap[counter].baseprice))
          {
            saleCounter=saleCounter + 1;
          }
        }
      }
    }

    //IF NO. OF SKUS ON SALE < NO. OF SKUS IN COLOR DROP-DOWN
    //THEN DISPLAY "SALE" IN COLOR DROP-DOWN
    if (saleCounter < colorDropDown.options.length && selectedIndexOfSize > 0) {
      var colorCounter= 0;
      for(; colorCounter < colorDropDown.options.length && colorCounter < pidSkuArrayForSize.length;colorCounter++)
      {
        var pidSkuArray = pidSkuArrayForSize[colorCounter].pidSku.split("|");
        var curSku = pidSkuArray[1];

        for(var counter = 0; counter < itemMap.length; counter++)
        {
          if(itemMap[counter].skuid == curSku)
          {
            if(parseFloat(itemMap[counter].currentprice) < parseFloat(itemMap[counter].baseprice))
            {
			if((colorDropDown.options[colorCounter].text).indexOf("SALE")<0) {
              colorDropDown.options[colorCounter].text = colorDropDown.options[colorCounter].text + " - SALE";
			  }
            }
            break;
          }
        }
      }
    }
   }
}

var NO_SIZE = "NO_SIZE";
var FORM_ID = "cyo_form";
var dynamicImageBaseUrl = "http://lp.imageg.net/prod?";
var cyoSwatch = null; 

function addToCart(submitProcess) {
	
    var f = document.getElementById(FORM_ID);
	f.action = "cyoPreCartHandler.jsp";
    //f.submit();
	//load newCartProductArray in expressShop.js to show up currently added products in minicart
	for (i=0; i < f.elements.length; i++)
	{
		qtyField = f.elements[i];
		nameStr = qtyField.name;
		if (nameStr.match("qty"))
		{
			//var qtyArray = qtyField.name.split("_");
			//prodIndex = qtyArray[1];
			prodField = eval('f.prod_0');
			if(prodField != null && prodField != '' && prodField.value != null && prodField.value != '')
			{
				prodSplit = prodField.value.split("|");
				if(prodSplit[0] != null && prodSplit[0] != '' && prodSplit[1] != null && prodSplit[1] != '')
				{
					loadNewCartProducts(prodSplit[0],prodSplit[1]);
				}
			}
			if(f.prod_1 != null && f.prod_1 != '' && f.prod_1.value != null && f.prod_1.value != '')
			{
				prodSplit_1 = f.prod_1.value.split("|");
				if(prodSplit_1[0] != null && prodSplit_1[0] != '' && prodSplit_1[1] != null && prodSplit_1[1] != '')
				{
					loadNewCartProducts(prodSplit_1[0],prodSplit_1[1]);
				}
			}
		}
	}
	if (submitProcess == "wishlist")
		{
			f.showMy.value = "wishlist";
			f.wlName.value = "wlName";
			f.cp.value = "1760781.1760809";
			f.secondaryAction.value = "customSkuAddWish";
			
		}
	if(!(submitProcess == "wishlist"))
		{
	
					
					ajaxAddToCart(f,'polocrest');
				
	}
	else
	{
		f.submit();
	}
}

function buildImageUrlParam(key, value) {
    return "set=key[" + key + "],value[" + value + "]";
}

function isQuantityValid(dropDownId) {
    var dropDown = document.getElementById(dropDownId);
    return (dropDown.options[dropDown.selectedIndex].value > "0");
}

var persistentSelectColorSwatchColorIndex	= new Array();
var atlView = false;

function selectColorSwatchOnClick(productId, colorIndex, updatingDropDown)
{
   //omniEngagementImpressions("event44", "Product Feature: Color");
	persistentSelectColorSwatchColorIndex[productId] = colorIndex;
	selectColorSwatch(productId, colorIndex, updatingDropDown);
	atlView = false;
}

