<script language="Javascript">
function trimString (str) {
  while (str.charAt(0) == ' ')
    str = str.substring(1);
  while (str.charAt(str.length - 1) == ' ')
    str = str.substring(0, str.length - 1);
  return str;
}


function emailCheck(type) // not sure if anybody uses this, but just in case i'm leaving it functional
{
 var email = trimString(document.emailForm.emailAddress.value);

    if (!validEmail(email))
	{
        alert('Please enter a valid e-mail address.');
        return false;
    }
	if(type == 1)
	{
        document.emailForm.submit();
	}
}

function validEmail(email)
{
    var vAtSym    = email.indexOf('@')
    var vPeriod   = email.lastIndexOf('.')
    var vSpace    = email.indexOf(' ')
    var vLength   = email.length - 1   // Array is from 0 to length-1

    if (vAtSym < 1 ||                     // '@' cannot be in first position
    	vPeriod <= vAtSym + 1 ||          // Must be atleast one valid char btwn '@' and '.'
    	vPeriod == vLength  ||            // Must be atleast one valid char after '.'
    	vSpace  != -1)                    // No empty spaces permitted
	{
        return false;
    }
	return true;
}





function showCustomPopUp(thisUrl,thisName,theseParams)
{
	remote = open(thisUrl, thisName, theseParams);
}


//	verisign POP-UP WINDOW
function popUp(url)
{
	sealWin=window.open(url,"win",'toolbar=0,location=0,directories=0,status=1,menubar=1,scrollbars=1,resizable=1,width=500,height=450');
	self.name = "mainWin";
}

function jump(url)
{
	if (url != "" && url != null)
	{
		self.location.href = url;
	}
}
</SCRIPT>

<script type="text/javascript">
// Wrapper to retrieve a DOM object.  This function (should) contain browser 
// checks and extra convienence functionality. 
function g_getObj(objId) { 
    if (document.getElementById) { 
        return document.getElementById(objId); 
    } 
  
    return null; 
}

// Will find any HTML elements that have a name attribute, including those
// that IE normally doesn't support...
function g_getObjectsByName(tag, name) {
    var tags = document.getElementsByTagName(tag);
    var obj = new Array();
    if (tags != null) {
        for (var i = 0, n = tags.length; i < n; i++) {
            if (tags[i].getAttribute("name") == name) {
                obj.push(tags[i]);
            }
        }
    }
    
    return obj;
}

function g_hideObj(objId) {
    var obj = (typeof(objId) == "string" ? g_getObj(objId) : objId);
    if (obj && obj.style) {
        obj.style.display = "none";
    }
}

function g_showObj(objId) {
    var obj = (typeof(objId) == "string" ? g_getObj(objId) : objId);
    if (obj && obj.style) {
        
        obj.style.display = (arguments[1] != null ? arguments[1] : "");
    }
}

function g_getTrueOffsetLeft(obj) {
    var trueOffset = 0;
    if (obj != null) {
        while (obj.offsetParent) {
            trueOffset += obj.offsetLeft;
            obj = obj.offsetParent; 
        }
    }
    return trueOffset;
}

function g_getTrueOffsetTop(obj) {
    var trueOffset = 0;
    if (obj != null) {
        while (obj.offsetParent) {
            trueOffset += obj.offsetTop;
            obj = obj.offsetParent; 
        }
    }
    return trueOffset;
}
</script>
<script type="text/javascript">
// Methods that apply to <select> objects and are generic to any page. 
// This JS file requires global.js to be present as well. 
 
function gs_copySelectedValue(srcSelObjId, targetSelObjId) {
    var srcSelectObj = g_getObj(srcSelObjId);
    var targetSelectObj = g_getObj(targetSelObjId);
    
    targetSelectObj.selectedIndex = srcSelectObj.selectedIndex;
}

function gs_getSelectedValue(selObjId, isReturnFirstValNothingSelected) {  
    var selectObj = g_getObj(selObjId);
    
    if (selectObj == null) {
        return null;
    } else if (selectObj.selectedIndex >= 0) {  
        return selectObj.options[selectObj.selectedIndex].value;  
    }  else if (isReturnFirstValNothingSelected && selectObj.selectedIndex == -1) {  
        return selectObj.options[0];  
    }  
      
    return null;  
}  
  
function gs_isAnythingSelected(selObjId) {  
    var selectObj = g_getObj(selObjId);  
    if (selectObj == null) {  
        return false;  
    }  
      
    return (selectObj.selectedIndex > -1);  
}

function gs_setSelectedValue(selObjId, selectedValue) {
    var selectObj = g_getObj(selObjId);
    if (selectObj == null) {
        return;
    }
    
    for (var i = 0; i < selectObj.options; i++) {
        if (selectObj.options[i].value == selectedValue) {
            selectObj.selectedIndex = i;
            break;
        }
    }
}
</script>

<script type="text/javascript">
//  contentPopup tab variables  //
	var contentPopupSizeChartUrl	= new Array();
	var contentPopupSizeChartPIDs	= new Array();
	
	function getEnlargeUrl(){
		return 	"productId=2994541";
	}
	function getSizeChartUrl(prodId){
		for(var i = 0 ; i < contentPopupSizeChartUrl.length ; i++){
			if(contentPopupSizeChartPIDs[i] == prodId)
				return contentPopupSizeChartUrl[i];
		}
		return "";
	}
	function getPopupUrl(prodId){
		var temp = getEnlargeUrl();
		if((prodId != null) && getSizeChartUrl(prodId)){
			if( temp )
				temp += '&';
			temp += getSizeChartUrl(prodId);
		}
		return temp;
	}
	function showEnhanced(){
		omniImpl('Enlargeimage'); 
		showCustomPopUp( '/contentPopup/index.jsp?ab=Enlargeimage&' + getPopupUrl('2994541'), 'largeImage', 'width=805,height=617,left=0,top=0');
	}

// ************************* CYO Objects *************************
var allCyoProducts = new Array();
var cyoProdsByProdId = new Array();

function getCyoProduct(productId) {
    var cyoProd = cyoProdsByProdId[productId];
    
    if (cyoProd == null) {
        alert("Unable to locate a CyoProduct instance with a product ID of: " + productId);
        return;
    }
    return cyoProd; 
}

// Expects an instance of CyoProduct
function registerCyoProduct(cyoProd) {
    allCyoProducts.push(cyoProd);
    cyoProdsByProdId[cyoProd.productId] = cyoProd;
}


function CyoProduct(id, name, isCustomized) {
    
    var _this = this;
    var selectedColorIndex = 0;
    var selectedCustomizationIndex = 0;
    var selectedSize = "";
    
    var dynamicImagingParams = new Array();
    var dynamicImagingParamsByType = new Array();
    var htmlObjects = new Array();
    var imageTypeMap = new Array();
    var modes = new Array();
    
    this.productId = id;
    this.productName = name;
    this.customized = isCustomized;
    
    this.allSizes = new Array();
    this.formFields = new Array();
    this.images = new Array();
    this.imageTypes = new Array();
    this.imageWidths = new Array();
    
    // Private methods
    function addImageType(imageType) { 
        if (imageTypeMap[imageType] == null) {
            _this.imageTypes.push(imageType);
            imageTypeMap[imageType] = true;
        }
    }
    
    // Privileged methods
    this.addCyoSwatch = function(size, cyoSwatch) {
        var cyoSwatches = this.allSizes[size];
        if (cyoSwatches == null) {
            cyoSwatches = new Array();
            _this.allSizes[size] = cyoSwatches;
        }
        cyoSwatches.push(cyoSwatch);
    }
    
    this.addDynamicImageParam = function(mode, type, tag, value) {
        if (dynamicImagingParams[mode] == null) {
            dynamicImagingParams[mode] = new Array();
            dynamicImagingParamsByType[mode] = new Array();
        }
        
        var dip = new DynamicImageParam(type, tag, value);
        dynamicImagingParams[mode].push(dip);
        dynamicImagingParamsByType[mode][type] = dip; 
    }
    
    this.addFormField = function(type, fieldId) { _this.formFields[type] = fieldId; }
    this.addHtmlObject = function(id, obj) { htmlObjects[id] = obj; }
    this.addImage = function(type, image) { _this.images[type] = image; addImageType(type); }
    this.addImageWidth = function(type, width) { _this.imageWidths[type] = width; addImageType(type); }
    this.addMode = function(index, mode) { modes[index] = mode; }
    this.getCurrentSwatch = function() {  return _this.getCyoSwatches(selectedSize)[selectedColorIndex]; }
    this.getCustomizedImagingTag = function() { return customizedImagingTag; }
    this.getCyoSwatches = function(size) { return _this.allSizes[size]; }
    this.getDynamicImageParams = function(mode) { return dynamicImagingParams[mode]; }
    this.getHtmlObject = function(id) { return htmlObjects[id]; }
    this.getMode = function(index) { return modes[document.getElementById("sm").value]; }
    this.getSelectedColorIndex = function() { return selectedColorIndex; }
    this.getSelectedCustomizationIndex = function() { return selectedCustomizationIndex; }
    this.getSelectedSize = function() { return selectedSize; }
    this.setCustomizedImagingTag = function(t) { customizedImagingTag = t; }
    this.setDynamicImageValue = function(mode, type, value) { dynamicImagingParamsByType[mode][type].value = value; }
    this.setSelectedColorIndex = function(i) { selectedColorIndex = i; }
    this.setSelectedCustomizationIndex = function(i) { selectedCustomizationIndex = i; }
    this.setSelectedSize = function(s) { selectedSize = s; }
    
    function DynamicImageParam(type, tag, value) {
        this.type = type;
        this.tag = tag;
        this.value = value;
    }
}


function CyoSwatch(color, swatchImage, price, layoutId, pidSku) {
    
    var _this = this;
    
    this.color = color;
    this.swatchImage = swatchImage;
    this.price = price;
    this.dynamicImageChains = new Array();
    this.customizedSwatches = new Array();
	
	//santosh: changes for custom right image chain for Emblem
	this.CRChainSwatches = new Array();

	// These vars only apply to swatches for a specific size
    this.layoutId = layoutId;
    this.pidSku = pidSku;
    
    if (layoutId != null) {
        _this.layoutId = layoutId;
    }
    
    if (pidSku != null) {
        _this.pidSku = pidSku;
    }
    
    // Private methods
    function arrayToString(array) {
        var arrayString = "";
        
        if (array != null) {
            for (var i = 0; i < array.length; i++) {
                if (arrayString.length > 0) {
                    arrayString += ", ";
                }
                arrayString += array[i];
            }
        }
        return arrayString;
    }
    
    // Privileged (sort of public) methods
    this.addDynamicImageChain = function (type, chainUrl) {
        _this.dynamicImageChains[type] = chainUrl;
    }
    
    this.addCustomizedSwatch = function(imageUrl, color, webcode, hexKeyValue, vendorCode) {
        _this.customizedSwatches.push(new CyoCustomizedSwatch(imageUrl, color, webcode, hexKeyValue, vendorCode));
    }
    
	//santosh: changes for custom right image chain for Emblem
	this.addCRChainSwatch = function(imageUrl, color, webcode, hexKeyValue, vendorCode) {
        _this.CRChainSwatches.push(new CyoCRChainSwatch(imageUrl, color, webcode, hexKeyValue, vendorCode));
    }

    this.toString = function() {
        return "color: " + _this.color + "\n"
                + "swatchImage: " + _this.swatchImage + "\n"
                + "dynamicImages: [" + arrayToString(_this.dynamicImages) + "]\n"
                + "customizedSwatches: [" + arrayToString(_this.customizedSwatches) + "]\n"; 
    }
    

    function CyoCustomizedSwatch(color, imageUrl, webcode, hexKeyValue, vendorCode) {
        
        var _this = this;
        this.color = color;
        this.imageUrl = imageUrl;
        this.webcode = webcode;
        this.hexKeyValue = hexKeyValue;
        this.vendorCode = vendorCode;
        
        this.toString = function() {
            return "\nimageUrl: " + this.imageUrl
                    + "\ncolor: " + this.color
                    + "\nwebcode: " + this.webcode
                    + "\nhexKeyValue: " + this.hexKeyValue
                    + "\nvendorCode: " + this.vendorCode;
        }
    }

	//santosh: changes for custom right image chain for Emblem
	 function CyoCRChainSwatch(color, imageUrl, webcode, hexKeyValue, vendorCode) {
        
        var _this = this;
        this.color = color;
        this.imageUrl = imageUrl;
        this.webcode = webcode;
        this.hexKeyValue = hexKeyValue;
        this.vendorCode = vendorCode;
        
        this.toString = function() {
            return "\nimageUrl: " + this.imageUrl
                    + "\ncolor: " + this.color
                    + "\nwebcode: " + this.webcode
                    + "\nhexKeyValue: " + this.hexKeyValue
                    + "\nvendorCode: " + this.vendorCode;
        }
    }

}

